{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2020",                          /* Specify ECMAScript target version */
    "module": "es2020",                          /* Specify module code generation */
    "rootDir": "src",                            /* Input directory for .ts files */
    "outDir": "lib",                             /* Output directory for compiled .js */
    "esModuleInterop": true,                     /* Enables emit interoperability between CommonJS and ES Modules */
    "resolveJsonModule": true,                   /* Allow importing .json files */
    
    /* Strict Type-Checking Options */
    "strict": true,                              /* Enable all strict type-checking options */
    "forceConsistentCasingInFileNames": true,    /* Disallow inconsistently-cased references to the same file */

    /* Additional Options */
    "skipLibCheck": true,                        /* Skip type checking of declaration files */
    "moduleResolution": "node",                  /* Module resolution strategy */
    "lib": ["es2020"]                            /* Specify library files to be included in compilation */
  },
  "include": ["src/**/*.ts"],                    /* Files to include in compilation */
  "exclude": ["node_modules", "lib"]             /* Files to exclude from compilation */
}
